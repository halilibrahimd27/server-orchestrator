# Backend Configuration
PORT=3000
WS_PORT=8080

# Database Configuration
# DB_TYPE: 'mysql' veya 'sqlite' (varsayılan: sqlite)
DB_TYPE=sqlite

# SQLite ayarları (DB_TYPE=sqlite ise)
DB_PATH=/data/database.sqlite

# MySQL/MariaDB ayarları (DB_TYPE=mysql ise)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=server_orchestrator

# Security - ÜRETİMDE BU DEĞERLERİ DEĞİŞTİRİN!
# JWT_SECRET uzun rastgele bir string olmalı
JWT_SECRET=change-this-super-secret-jwt-key-in-production-min-32-chars

# ENCRYPTION_KEY tam olarak 32 karakter olmalı (AES-256 için)
ENCRYPTION_KEY=12345678901234567890123456789012

# Node Environment
NODE_ENV=production

# Monitoring & Scheduler Configuration
HEALTH_CHECK_INTERVAL=5  # Dakika cinsinden (varsayılan: 5)
SCHEDULER_ENABLED=true   # Görev zamanlayıcı aktif/pasif
